# Augmented MCQA Environment Configuration
# Copy this file to .env and fill in your API keys

# === API Keys ===
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GOOGLE_API_KEY=your-google-gemini-key-here
DEEPSEEK_API_KEY=your-deepseek-key-here

# === HuggingFace ===
HF_TOKEN=hf_your-huggingface-token-here
HF_HOME=/fs/nexus-scratch/adesai10/hub

# === Paths ===
# Model weights cache directory
MODEL_CACHE_DIR=/fs/nexus-scratch/adesai10/hub

# Base directory for datasets
DATASETS_DIR=/fs/nexus-projects/rlab/atrey/qgqa/augmented-mcqa/datasets

# Base directory for results
RESULTS_DIR=/fs/nexus-projects/rlab/atrey/qgqa/augmented-mcqa/results

# === Experiment Settings ===
# Random seed for reproducibility
RANDOM_SEED=12345

# Default number of examples for testing (set to None for full runs)
DEFAULT_LIMIT=25

# Skip HuggingFace Hub push (set to 1 to skip)
HF_SKIP_PUSH=0
